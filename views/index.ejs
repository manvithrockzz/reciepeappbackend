 <!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Recipe App</title>
</head>
<body>
    <!-- Heading -->
    <h1 style="color: red; text-align: center; font: 5em sans-serif;">Recipe App</h1>

    <ul>
        <!-- Loop through recipes array -->
        <% recipes.forEach((recipe) => { %>
            <li>
                <!-- Display recipe name and description -->
                <%= recipe.name %> - <%= recipe.description %>
                
                <!-- Form for deleting recipe -->
                <form action="/<%= recipe._id %>/delete" method="post">
                    <button type="submit">Delete here</button>
                </form>
                
                <!-- Form for editing recipe -->
                <form action="/<%= recipe._id %>/edit" method="get">
                    <button type="submit">Edit here</button>
                </form>
            </li>
        <% }); %>
        
        <!-- Link to add new recipe -->
        <a href="/new">Add new Recipe here</a>
    </ul>

    
</body>
</html>